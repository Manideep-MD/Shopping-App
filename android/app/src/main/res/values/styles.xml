<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
         <item name="launchImage">@drawable/launch_screen_light</item>
    </style>

    <style name="LightTheme" parent="Theme.AppTheme">
        <item name="launchImage">@drawable/launch_screen_light</item>
        <item name="bgColor">@color/white</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppTheme">
        <item name="launchImage">@drawable/launch_screen_dark</item>
        <item name="bgColor">@color/black</item>
    </style>

</resources>